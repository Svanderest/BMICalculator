<Page
    x:Class="BMICalculator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BMICalculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <SplitView Name="stvMain">
        <SplitView.Pane>
            <TextBlock></TextBlock>
        </SplitView.Pane>
        <SplitView.Content>
            <RelativePanel MinHeight="500">
                <TextBlock Name="lblWeight" Margin="5,25,5,5" TextAlignment="Right">Weight</TextBlock>
                <TextBox Name="txtWeight" RelativePanel.RightOf="lblWeight" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignVerticalCenterWith="lblWeight" Margin="0,25,0,5"></TextBox>
                <TextBlock Name="lblHeight" Margin=""></TextBlock>
            </RelativePanel>
        </SplitView.Content>
    </SplitView>
</Page>
